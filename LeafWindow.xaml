<Window x:Class="NewLeaf.LeafWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewLeaf"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Leaf"
        Height="320"
        Width="320">
    <Window.Resources>
        <Style x:Key="CaptionButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Tittle Bar -->
        <Border x:Name="TittleBar" Grid.Row="0" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SaveLeaf Button -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="4,0,0,0">
                    <Button x:Name="SaveLeafButton" Style="{StaticResource CaptionButtonStyle}" Content="&#xE74E;" FontSize="16"></Button>
                </StackPanel>

                <!-- Pin/Minimize/Maximize/Close Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,4,0">
                    <ToggleButton x:Name="PinButton">
                        <ToggleButton.Style>
                            <Style>
                                <Setter Property="ToggleButton.FontFamily" Value="Segoe Fluent Icons"/>
                                <Setter Property="ToggleButton.FontSize" Value="16"/>
                                <Setter Property="ToggleButton.Content" Value="&#xe718;"/>
                                <Setter Property="ToggleButton.Background" Value="Transparent"/>
                                <Setter Property="ToggleButton.BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="ToggleButton.IsChecked" Value="False">
                                        <Setter Property="ToggleButton.Content" Value="&#xe718;"/>
                                    </Trigger>
                                    <Trigger Property="ToggleButton.IsChecked" Value="True">
                                        <Setter Property="ToggleButton.Content" Value="&#xe77a;"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    <Button x:Name="MinimizeButton" Style="{StaticResource CaptionButtonStyle}" Content="&#xe921;"></Button>
                    <Button x:Name="MaximizeButton" Style="{StaticResource CaptionButtonStyle}" Content="&#xe922;"></Button>
                    <Button x:Name="CloseButton" Style="{StaticResource CaptionButtonStyle}" Content="&#xe8bb;"></Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <TextBox Grid.Row="1" Text="{Binding LeafContent}" BorderBrush="Transparent" BorderThickness="0" Margin="4,4" KeyDown="TextBox_KeyDown"/>
    </Grid>
</Window>
